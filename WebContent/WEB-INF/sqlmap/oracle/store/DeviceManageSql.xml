  	<update id="updateDevice" parameterType="kr.msp.admin.store.device.dto.DeviceDto">
  	    <!-- 단말기 정보 갱신 -->
  	    UPDATE TB_STO_DEVC SET
			   DEVC_ID     = #{DEVC_ID}
			 , DISP_WIDTH  = #{DISP_WIDTH}
			 , BRD_NM      = #{BRD_NM}
			 , MFG_NM      = #{MFG_NM}
